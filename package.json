{
  "name": "nextjs-starer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "wrangler d1 migrations apply blog_dev_local  --local",
    "db:migrate:prod": "wrangler d1 migrations apply blog_dev  --remote",
    "db:studio:dev": "DB_LOCAL_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio --port 3094",
    "db:studio:prod": "npm run setup:prod && drizzle-kit studio --port 3098",
    "setup:dev": "cp .env.development .env && cp .env.development .env.production.local && cp wrangler.json.development wrangler.json",
    "setup:prod": "cp .env.production .env && cp .env.production .env.production.local && cp wrangler.json.production wrangler.json",
    "pages:build": "npm next-on-pages",
    "pages:dev": "npm run setup:dev && npm pages:build && npm wrangler pages dev --port=3000",
    "pages:deploy": "npm run setup:prod && npm pages:build && npm wrangler pages deploy"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.5",
    "@radix-ui/react-dropdown-menu": "^2.1.5",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@t3-oss/env-core": "^0.11.1",
    "@t3-oss/env-nextjs": "^0.11.1",
    "add": "^2.0.6",
    "better-sqlite3": "^11.8.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.4",
    "eslint-config-prettier": "^10.0.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "lucide-react": "^0.473.0",
    "next": "15.1.4",
    "next-themes": "^0.4.4",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.30.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.1.4",
    "eslint-plugin-import": "^2.31.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5"
  },
  "overrides": {
    "react": "$react",
    "react-dom": "$react-dom"
  }
}
